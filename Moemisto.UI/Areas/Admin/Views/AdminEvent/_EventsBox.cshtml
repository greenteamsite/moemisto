@model List<Moemisto.UI.Models.EventBaseVm>

@foreach (var eventItem in Model)
{
    <div class="row" style="margin-top: 10px;">
        <div class="col-md-12">
            <div class="media">
                <div class="media-left">
                    <div class="col-xs-12">
                        <div class="col-xs-6">
                            <a href="@Url.Action("EventSchedule", new {eventId = eventItem.EventId})" title="Розклад">
                                <span style="font-size: xx-large;" class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
                            </a>
                        </div>
                        <div class="col-xs-6">
                            <a href="@Url.Action("EventEdit", new {eventId = eventItem.EventId})" title="Редагувати">
                                <img class="media-object placeListPic" src="@eventItem.PosterSmallUrl" alt="@eventItem.Title">
                            </a>
                        </div>
                    </div>
                </div>
                <div style="padding-left: 15px;" class=" media-body">
                    <a href="@Url.Action("EventEdit", new {eventId = eventItem.EventId})" title="Редагувати">
                        <h3 class="media-heading">@eventItem.Title</h3>
                    </a>
                    <span>@eventItem.ShortInfoCutted(100)</span>
                </div>
            </div>
        </div>
    </div>
}
